<!DOCTYPE html>
<html>
  <head>
    <title>Checkers</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="about.css" />
    <link rel="stylesheet" href="index.css" />
    <link rel="stylesheet" href="leaderboard.css" />
  </head>
  <body>
    <style>
      span {
        font-size: 20px;
        padding-left: 20px;
        font-family: "Nunito", sans-serif;
      }
    </style>
    <div style="isolation: isolate" class="about-section">
      <h2 style="font-family: courgette">My profile</h2>
    </div>

    <div class="container">
      <div class="row row-cols-2" style="margin-bottom: 50px;">
        <div class="div1" style="margin-top: 100px; padding-left:200px">
          <span><b>Name :</b> <span> <%=data[0].name%></span></span>
          <br>
          <span><b>Email :</b> <span> <%=data[0].email%></span></span>
          <br>
          <span><b>Highest Score : </b> <span><%= data[0].score%></span></span>
          <br>
          <span
          ><b>Total games played : </b>
          <span><%= data[0].no_of_games%></span></span
          >
          <br>
          <span><b>Wins : </b> <span id="wins"><%= data[0].wins%></span></span>
          <br>
          <span>
            <b>Losses : </b>
            <span><%= data[0].no_of_games - data[0].wins %></span>
          </span>
          <br>
          <span>
            <b>Accuracy : </b>
            <span><%=data[0].wins / data[0].no_of_games *100 %></span>
          </span>
          <br>
          <span
          ><b>Best Win Time :</b>
          <span><%= data[0].best_win_time%></span></span
          >
          <br>
        </div>
        <div class="div2" style="margin-left: -18px">
          <span id="piechart" style="margin: auto; margin-left: 100px"></span>
        </div>
        <canvas
          id="myChart1"
          style="isolation: isolate; max-width: 600px"
        ></canvas>
        <canvas
          id="myChart2"
          style="isolation: isolate; max-width: 600px"
        ></canvas>
      </div>
    </div>
    <!-- <div class="col"> -->
    <!-- </div> -->
    <script
      type="text/javascript"
      src="https://www.gstatic.com/charts/loader.js"
    ></script>

    <script type="text/javascript">
      function htmlDecode(input) {
        var e = document.createElement("div");
        e.innerHTML = input;
        return e.childNodes.length === 0 ? "" : e.childNodes[0].nodeValue;
      }
      var myData = JSON.parse(htmlDecode("<%= JSON.stringify(data) %>"));
      console.log(myData[0].score_per_month);
      // Load google charts
      google.charts.load("current", { packages: ["corechart"] });
      google.charts.setOnLoadCallback(drawChart);

      // Draw the chart and set the chart values
      function drawChart() {
        var dataPie = google.visualization.arrayToDataTable([
          ["Task", "Hours per Day"],
          ["Win", parseInt(document.getElementById("wins").innerHTML)],
          ["Lose", 5],
        ]);

        // Optional; add a title and set the width and height of the chart
        var options = {
          title: "My Average Performance",
          width: 550,
          height: 400,
        };

        // Display the chart inside the <div> element with id="piechart"
        var chart = new google.visualization.PieChart(
          document.getElementById("piechart")
        );
        chart.draw(dataPie, options);
      }

      //BAR GRAPH 1

      var xValues1 = [
        "Jan",
        "Feb",
        "March",
        "April",
        "May",
        "June",
        "July",
        "Aug",
        "Sep",
        "Oct",
        "Nov",
        "Dec",
      ];
      yValues1 = [];
      for (let i = 0; i < 12; i++) {
        yValues1[i] = parseInt(myData[0].score_per_month[i]);
      }

      var barColors = "#614fc7";

      new Chart("myChart1", {
        type: "bar",
        data: {
          labels: xValues1,
          datasets: [
            {
              backgroundColor: barColors,
              data: yValues1,
            },
          ],
        },
        options: {
          legend: { display: false },
          title: {
            display: true,
            text: "Score Per Month Analysis",
            // fontColor: red,
            // fontName: "Courier New",    // 'Times New Roman'
            fontSize: 20, // 12, 18
          },
        },
      });

      //BAR GRAPH 2

      var xValues2 = ["Mon", "Tues", "Wed", "Thurs", "Fri", "Sat", "Sun"];
      yValues2 = [];
      for (let i = 0; i < 7; i++) {
        yValues2[i] = parseInt(myData[0].score_per_day[i]);
      }

      var barColors = "#614fc7";

      new Chart("myChart2", {
        type: "bar",
        data: {
          labels: xValues2,
          datasets: [
            {
              backgroundColor: barColors,
              data: yValues2,
            },
          ],
        },
        options: {
          legend: { display: false },
          title: {
            display: true,
            text: "Score Per Day Analysis",
            // fontColor: red,
            // fontName: "Courier New",    // 'Times New Roman'
            fontSize: 20, // 12, 18
          },
        },
      });

      // var canvas = document.querySelector("#myChart");
      // var context = canvas.getContext("2d");
      // context.font = "bold 96px Helvetica, Arial, sans-serif";
      // context.fillStyle = "steelblue";
      // context.strokeStyle = "#173b79";
    </script>
    <script
      language="javascript"
      type="text/javascript"
      src="index.js"
    ></script>
    <script
      language="javascript"
      type="text/javascript"
      src="../routes/leaderboard.js"
    ></script>
    <style>
      /* #myChart{
        color: aqua;
      } */

      rect {
        width: 0px;
        height: 0px;
      }
      svg {
        margin-left: 80px;
      }
      svg g text {
        font-size: 18px;
        fill: rgb(100, 201, 41);
      }

    </style>
  </body>
</html>
